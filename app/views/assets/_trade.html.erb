<h3>this is the trade partial</h3>
<%= form_for @contract, :url => asset_contracts_path(asset_id: @asset.id), :method => "post" do |f| %>
  <p>
    <%= f.label :ticker %>
    <%= f.text_field :ticker %>
  </p>
  <p>
    <%= f.label :strike_price %>
    <%= f.number_field :strike_price, class: :text_field, step: :any %>
  </p>
  <p>
    <%= f.label :interval %>
    <%= f.text_field :interval %>
  </p>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :asset_id, value: @asset.id %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
