

<div id="equities-container">
  <h3>Hey <%= @user.username.capitalize %>! </h3>
  <p id="instructions" >My name is <%= @user.robot.name.capitalize %>.
    <br>I'm your mentor robot here at PCP.
    <br>On your left are the stocks
    <br>that you can play with.
    <br>Go ahead and click one of them.
  </p>

  <div id="mentor-robot">
    <img src="<%= @user.robot.summon %>" alt="Robot Mentor">
  </div>

  <div class='stockbox'>
    <div class='button'><%= link_to "TSLA", equity_path(1), class: 'stock-link' %></div>
    <div class='button'><%= link_to "GOOGL", equity_path(2), class: 'stock-link'  %></div>
    <div class='button'><%= link_to "AAPL", equity_path(3), class: 'stock-link' %></div>
    <div class='button'><%= link_to "FB", equity_path(4), class: 'stock-link' %></div>
    <div class='button'><%= link_to "TWTR", equity_path(5), class: 'stock-link' %></div>
  </div>

  <div id="graph"><%= render 'graphs/graph' %></div>
</div>





