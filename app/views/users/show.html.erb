<h1>User Profile</h1>

<p>
  <strong>email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<% @contracts.each do |contract| %>
  <tr>
    <td><%= link_to contract.ticker, contract_path(contract) %></td>
  </tr><br>
  <tr>
    <% if contract.strike_price %>
      <td>Strike Price: $<%= contract.strike_price %></td><br>
      <td>Created at: <%= contract.created_at.time %></td><br>
      <td>Expiration: <%= contract.expiration %></td><br>
      <td>Spot Price: $<%= contract.spot_price %></td><br>
    <% end %>
  </tr><br>
<% end %>

<p>
<%= link_to 'Buy a contract', new_contract_path(@contracts) %>
</p>