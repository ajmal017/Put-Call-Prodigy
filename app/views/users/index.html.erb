<h1>Welcome to the user index</h1>

<% @users.each do |user| %>
<p>
	<%= user.username %><br>
	<% user.contracts.each do |contract| %>
	<tr>
		<td><%= contract.ticker %></td>
	</tr><br>
	<tr>
		<% if contract.strike_price %>
			<td>Strike Price: </td>
			<td>$<%= contract.strike_price %></td>
			<td> on <%= contract.created_at.time %></td>
			<td> with an expiration time of <%= contract.created_at.time + 15*60 %></td>
	</tr>
		<% end %>
	</tr>
	<% end %>
</p>
<% end %>

<div>
	<%= form_tag graph_data_api_graphs_path, remote: true do %>
		<%= hidden_field_tag(:ticker, 'AAPL') %>

		<div class="col-sm-2">
      <%= submit_tag 'AAPL' %>
    </div>
  <% end %>
</div>

<div>
	<%= form_tag graph_data_api_graphs_path, remote: true do %>
		<%= hidden_field_tag(:ticker, 'AA') %>

		<div class="col-sm-2">
      <%= submit_tag 'AA' %>
    </div>
  <% end %>
</div>

<%= render 'graphs/graph' %>
